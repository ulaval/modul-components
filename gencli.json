{
    "fileExtension": "ts",
    "fileNameCase": "kebab",
    "folderNameCase": "kebab",
    "templatePath": "/src/meta/cli-templates",
    "entityConfigs": [
        {
            "name": "component",
            "path": "/src/components",
            "prefix": "m",
            "fileConfigs": [
                {
                    "name": "*",
                    "template": "component-vue.txt"
                },
                {
                    "name": "*",
                    "template": "component-template.txt",
                    "extension": "html"
                },
                {
                    "name": "*",
                    "template": "component-style.txt",
                    "extension": "scss"
                },
                {
                    "name": "*.spec",
                    "template": "component-test.txt"
                },
                {
                    "name": "*.stories",
                    "template": "component-stories.txt"
                },
                {
                    "name": "*.lang.fr",
                    "template": "component-locale-fr.txt",
                    "extension": "json"
                }
            ]
        },
        {
            "name": "directive",
            "path": "/src/directives",
            "files": [
                {
                    "name": "*",
                    "template": "directive.txt"
                },
                {
                    "name": "*.spec",
                    "template": "directive-test.txt"
                }
            ]
        }
    ]
}
