// Placez vos paramètres dans ce fichier pour remplacer les paramètres par défaut et les paramètres utilisateur.
{
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "stylelint.enable": true,
    "css.validate": false,
    "scss.validate": false,
    "tslint.configFile": "conf/tslint.json",
    "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "typescriptHero.imports.organizeOnSave": true, //Pour organiser sur le save
    "typescriptHero.imports.multiLineTrailingComma": false, //Pour pas avoir de trailing comma
    "typescriptHero.imports.multiLineWrapThreshold": 9999, //Pour garder sur une seule ligne
    "typescriptHero.imports.grouping": [ //Ordre des imports
        "Plains",
        "/bootstrap/",
        "Modules",
        "Workspace"
    ]
}
