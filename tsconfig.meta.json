{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.*",
        "src/**/*.sandbox.*",
        "tests/**/*"
    ]
}
