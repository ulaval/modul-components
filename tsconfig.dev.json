{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2015",
        "lib": [
            "es5", "es6", "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "src/**/*.spec.*",
        "dist/**/*",
        "lib/**/*",
        "tests/**/*"
    ]
}
