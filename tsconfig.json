{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "types": [
            "node",
            "jest",
            "webpack-env",
            "googlemaps"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "plugins": [{
            "name": "typescript-tslint-plugin"
        }]
    },
    "exclude": [
        "node_modules",
        "dist",
        "tests/meta/**.*",
        "conf/**"
    ]
}
