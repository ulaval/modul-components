{
    "name": "modul-components",
    "version": "0.1.0",
    "description": "Component library",
    "author": "Martin Simard <martin.simard@dti.ulaval.ca>",
    "private": true,
    "scripts": {
        "clean": "rimraf dist",
        "dev": "webpack-dev-server --config conf/webpack.config.js --content-base src --colors --port 8080 --open --history-api-fallback",
        "dev": "rimraf dist/*.d.ts && webpack-dev-server --config conf/webpack.config.js --content-base src --colors --port 8082 --open --history-api-fallback",
        "build": "rimraf dist/*.d.ts && webpack --env.prod --config conf/webpack.config.js --colors && npm run declarations && npm run scssCopy",
        "declarations": "copyfiles -f ./src/**/*.d.ts dist",
        "scssCopy": "copyfiles -u 1 ./src/styles/**/*.scss dist",
        "unit": "karma start conf/karma.conf.js --browsers PhantomJS --single-run",
        "unitall": "karma start conf/karma.conf.js --single-run",
        "test": "npm run unitall",
        "tslint": "tslint -c conf/tslint.json -e 'src/**/*.d.ts' -e 'tests/unit/**/*.d.ts' -s node_modules/custom-tslint-formatters/formatters -t grouped 'src/**/*.ts' 'tests/unit/**/*.ts' 'tests/e2e/*.ts'",
        "stylelint": "stylelint \"src/**/*.css\" \"src/**/*.scss\" --config conf/stylelint.json"
    },
    "dependencies": {
        "vue": "^2.3.2",
        "vue-router": "^2.5.3",
        "es6-promise": "^4.1.0"
    },
    "devDependencies": {
        "@types/node": "^7.0.16",
        "awesome-typescript-loader": "^3.1.3",
        "copyfiles": "^1.2.0",
        "css-loader": "^0.28.1",
        "html-webpack-plugin": "^2.28.0",
        "node-sass": "^4.5.2",
        "postcss-loader": "^1.3.3",
        "rimraf": "^2.6.1",
        "sass-loader": "^6.0.3",
        "style-loader": "^0.17.0",
        "typescript": "^2.3.2",
        "vue-class-component": "^5.0.1",
        "vue-property-decorator": "^5.0.1",
        "vue-template-compiler": "^2.3.2",
        "vue-template-loader": "^0.3.1",
        "webpack": "^2.4.1",
        "webpack-dev-server": "^2.4.5",
        "custom-tslint-formatters": "^2.1.0",
        "tslint": "^5.1.0",
        "tslint-config-standard": "^5.0.2",
        "tslint-loader": "^3.5.3",
        "stylelint": "^7.10.1",
        "stylelint-config-standard": "^16.0.0",
        "stylelint-scss": "^1.4.4",
        "stylelint-webpack-plugin": "^0.7.0",
        "@types/jasmine": "^2.5.47",
        "jasmine-core": "^2.4.1",
        "karma": "^1.4.1",
        "karma-chrome-launcher": "^2.1.1",
        "karma-firefox-launcher": "^1.0.1",
        "karma-jasmine": "^0.3.6",
        "karma-phantomjs-launcher": "^1.0.2",
        "karma-spec-reporter": "0.0.26",
        "karma-webpack": "^2.0.2"
    },
    "peerDependencies": {
        "vue": "2.x"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ulaval/vuejs-typescript-template.git"
    },
    "engines": {
        "node": ">= 6.0.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 10"
    ],
    "files": [
        "dist"
    ],
    "typings": "dist/index.d.ts",
    "license": "Apache-2.0"
}
