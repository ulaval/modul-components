{
    "name": "@ulaval/modul-components",
    "version": "1.0.0-beta.18",
    "description": "Component library",
    "author": "Martin Simard <martin.simard@dti.ulaval.ca>",
    "private": false,
    "scripts": {
        "setup": "npm install --no-optional",
        "clean": "rimraf dist",
        "dev": "webpack-dev-server --config conf/webpack.config.js --content-base src --colors --port 8082 --open --history-api-fallback",
        "buildWebpack": "webpack --config conf/webpack.config.js --colors",
        "build": "tsc && copyfiles -u 1 \"./src/**/*.json\" dist && copyfiles -u 1 \"./src/**/*.html\" dist && copyfiles -u 1 \"./src/**/*.scss\" dist && copyfiles -u 1 \"./src/**/*.css\" dist && npm run assetsToDist && npm run metagen",
        "dtsToDist": "copyfiles -f \"./src/**/*.d.ts\" dist",
        "scssToDist": "copyfiles -u 1 \"./src/styles/**/*.scss\" dist && copyfiles -u 1 \"./src/styles/**/*.css\" dist",
        "assetsToDist": "copyfiles -u 1 \"./src/assets/**/*\" dist",
        "unit": "jest --verbose --silent",
        "unitwatch": "jest --watch --verbose --silent",
        "metagen": "node ./tests/meta/meta-generator \"./src/components\" \"./dist/components\" && node ./tests/meta/meta-generator \"./src/mixins\" \"./dist/mixins\"",
        "unitall": "jest --ci --testResultsProcessor=jest-junit",
        "e2e": "node tests/e2e/index.js",
        "test": "npm run unitall && npm run e2e",
        "tslint": "tslint -c conf/tslint.json -e 'src/**/*.d.ts' -e 'tests/unit/**/*.d.ts' -s node_modules/custom-tslint-formatters/formatters -t grouped 'src/**/*.ts' 'tests/unit/**/*.ts' 'tests/e2e/*.ts'",
        "stylelint": "stylelint \"src/**/*.css\" \"src/**/*.scss\" --config conf/stylelint.json",
        "prepack": "npm run clean && npm run build"
    },
    "jest": {
        "roots": [
            "<rootDir>/src/"
        ],
        "transform": {
            "^.+\\.tsx?$": "ts-jest",
            "^.+\\.html(\\?style=\\..+)?$": "<rootDir>/tests/jest/vue-template-transformer.js"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleNameMapper": {
            "^(.+\\.html)(\\?style=\\..+)?$": "$1"
        },
        "snapshotSerializers": [
            "<rootDir>/node_modules/jest-serializer-vue"
        ],
        "setupFiles": [
            "<rootDir>/tests/polyfills.js",
            "<rootDir>/tests/setup.ts"
        ]
    },
    "jest-junit": {
        "output": "./tests/reports/junit.xml"
    },
    "peerDependencies": {
        "axios": "^0.17.1",
        "bundle-loader": "^0.5.5",
        "css-element-queries": "^0.4.0",
        "css-loader": "^0.28.7",
        "enquire.js": "^2.1.6",
        "file-loader": "^1.1.5",
        "moment": "^2.19.3",
        "node-sass": "^4.7.2",
        "popper.js": "^1.12.9",
        "portal-vue": "~1.1.1",
        "postcss-loader": "^2.0.9",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.19.0",
        "url-loader": "^0.6.2",
        "vue-property-decorator": "^6.0.0",
        "vue-template-compiler": "^2.5.9",
        "vue-template-loader": "^0.3.1",
        "vue-touch": "^2.0.0-beta.4"
    },
    "devDependencies": {
        "@types/es6-promise": "^0.0.33",
        "@types/jest": "^22.1.1",
        "@types/node": "^8.0.54",
        "@vue/test-utils": "^1.0.0-beta.11",
        "awesome-typescript-loader": "^3.4.1",
        "axios": "^0.17.1",
        "bundle-loader": "^0.5.5",
        "chromedriver": "^2.33.2",
        "copyfiles": "^1.2.0",
        "css-element-queries": "^0.4.0",
        "css-loader": "^0.28.7",
        "custom-tslint-formatters": "^2.1.1",
        "enquire.js": "^2.1.6",
        "es6-promise": "^4.1.1",
        "file-loader": "^1.1.5",
        "html-webpack-plugin": "^2.30.1",
        "jest": "^22.1.4",
        "jest-junit": "^3.6.0",
        "jest-serializer-vue": "^0.3.0",
        "moment": "^2.19.3",
        "nightwatch": "^0.9.19",
        "node-sass": "^4.7.2",
        "popper.js": "^1.12.9",
        "portal-vue": "~1.1.1",
        "postcss-loader": "^2.0.9",
        "postcss-sass": "^0.2.0",
        "qs": "^6.5.1",
        "rimraf": "^2.6.2",
        "sass-loader": "^6.0.6",
        "selenium-server": "^3.8.1",
        "style-loader": "^0.19.0",
        "stylelint": "^8.3.1",
        "stylelint-config-standard": "^18.0.0",
        "stylelint-scss": "^2.2.0",
        "stylelint-webpack-plugin": "^0.9.0",
        "svg-inline-loader": "^0.8.0",
        "ts-jest": "^22.0.3",
        "tslint": "^5.8.0",
        "tslint-config-standard": "^7.0.0",
        "tslint-loader": "^3.5.3",
        "typescript": "^2.6.2",
        "url-loader": "^0.6.2",
        "vue": "^2.5.9",
        "vue-class-component": "^6.1.1",
        "vue-property-decorator": "^6.0.0",
        "vue-router": "^3.0.1",
        "vue-server-renderer": "^2.5.9",
        "vue-template-compiler": "^2.5.9",
        "vue-template-loader": "^0.3.1",
        "vue-touch": "^2.0.0-beta.4",
        "webpack": "^3.10.0",
        "webpack-dev-server": "^2.9.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ulaval/modul-components.git"
    },
    "engines": {
        "node": ">= 6.0.0",
        "npm": ">= 3.0.0"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 10"
    ],
    "files": [
        "dist"
    ],
    "license": "Apache-2.0"
}
